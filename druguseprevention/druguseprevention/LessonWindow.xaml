<Window x:Class="druguseprevention.LessonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bài học" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F4FF" Margin="10">
        <StackPanel>
            <TextBlock x:Name="TitleBlock" FontSize="24" FontWeight="Bold" Foreground="#1E3A8A" Margin="0,0,0,10"/>
            <TextBlock x:Name="ContentBlock" TextWrapping="Wrap" FontSize="16" Foreground="#333"/>
            <Button Content="Tài liệu bài học" Height="35" Margin="0,20,0,0" Background="#2563eb" Foreground="White" Click="OpenMaterial_Click"/>
            <Button Content="Làm bài kiểm tra" Click="OpenQuiz_Click" Margin="0,10,0,0"/>

        </StackPanel>
    </Grid>
</Window>