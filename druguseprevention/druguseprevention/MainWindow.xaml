<Window x:Class="druguseprevention.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drug Prevention" Height="450" Width="800">
    <DockPanel>
 
        <Border Background="#F7F7F7" DockPanel.Dock="Top" Padding="10" BorderBrush="#DDD" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="https://res.cloudinary.com/dwjtg28ti/image/upload/v1748824738/z6621531660497_00c45b7532add5b3a49055fb93d63a53_ewd8xj.jpg"
                           Height="40" Width="40" Margin="0,0,10,0" />
                    <TextBlock Text="Drug Prevention" FontWeight="Bold" FontSize="18" Foreground="#1e3a8a" VerticalAlignment="Center"/>
                </StackPanel>

          
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
          
                    <Button Content="Khóa học" Margin="5,0" Click="MenuButton_Click"/>
                    <Button Content="Đánh giá" Margin="5,0" Click="MenuButton_Click"/>
                    <Button Content="Tư vấn trực tuyến" Margin="5,0" Click="MenuButton_Click"/>
                    <Button Content="Chương trình cộng đồng" Margin="5,0" Click="MenuButton_Click"/>
                </StackPanel>

               
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button x:Name="RegisterButton" Content="Đăng ký" Margin="5,0"/>
                    <Button x:Name="LoginButton" Content="Đăng nhập" Margin="5,0" Background="#2563eb" Foreground="White" Click="LoginButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

      
        <Grid>
           
        </Grid>
    </DockPanel>
</Window>
