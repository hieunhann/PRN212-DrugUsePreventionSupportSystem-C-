<Window x:Class="druguseprevention.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập" Height="500" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F4FF">
        <Border Background="White" Padding="20" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="Đăng nhập" FontSize="24" FontWeight="Bold" Foreground="#1E3A8A" Margin="0,0,0,10"/>
                <TextBlock Text="Vui lòng nhập thông tin của bạn" Margin="0,0,0,20" Foreground="Gray"/>

                <TextBlock Text="Tên đăng nhập" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameBox" Height="30" />

                <TextBlock Text="Mật khẩu" Margin="10,10,0,5"/>
                <PasswordBox x:Name="PasswordBox" Height="30"/>

                <CheckBox x:Name="RememberMeBox" Content="Ghi nhớ tôi" Margin="0,10,0,10"/>

                <Button Content="Đăng nhập" Background="#2563eb" Foreground="White" Height="35"
                        Click="LoginButton_Click" />

                
            </StackPanel>
        </Border>
    </Grid>
</Window>
